<!DOCTYPE html>
<html>
  <head>
    <%- include('./partials/head') -%>
  </head>
  <body class="container bg-light">
    <header><%- include('./partials/header') -%></header>
    <div>
      <h5><%= item.name %></h5>
      <h6><%= item.price %>$ | <%= item.numInStock %> Available</h6>
      <p><%= item.description %></p>
      <p>Categories:</p>
      <ul>
        <% item.category.forEach(function(category) { %>
        <li><%= category.name %></li>
        <% }) %>
      </ul>
      <a href="/inventory/item/<%-item._id%>/update" class="btn btn-success"
        >Update</a
      >
      <a href="/inventory/item/<%-item._id%>/delete" class="btn btn-danger"
        >Delete</a
      >
    </div>
  </body>
</html>
